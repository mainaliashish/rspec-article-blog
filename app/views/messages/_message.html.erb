<div id="<%= dom_id message %>">
  <p>
    <strong>Body:</strong>
    <%= message.body %>
  </p>

  <p>
    <%= link_to "Show this message", message, class: "btn btn-primary btn-sm" %>
    <%= link_to "Edit this message", edit_message_path(message), data: { turbo_method: :post }, class: "btn btn-success btn-sm" %>
    <%= link_to "Destroy this message", message_path(message), data: { turbo_method: :delete }, class: "btn btn-danger btn-sm" %>
  </p>
  <hr/>
</div>